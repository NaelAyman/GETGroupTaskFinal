// Start Books Show 
section
  .books-show
    h2(class="wow fadeInDown") تصفح الكتب
    .container
      ul.nav.nav-tabs(class="wow fadeInUp" data-wow-delay="0.2s")
        block nav-tabs
          li.nav-item
            a.nav-link.active(data-toggle="tab", href="#newer") وصل حديثاً
          li.nav-item
            a.nav-link(data-toggle="tab", href="#most") الأكثر تقييماً
      
      .tab-content
        block tab-content
          .tab-pane.active#newer
            .row
              each book in books
                .col-xl-3.col-lg-4.col-md-6
                  .book-box(class="wow fadeIn" data-wow-delay= book.delay)
                    .book-img
                      img(src="img/"+ book.image, alt="book name")
                    .book-content
                      .book-headTitle
                        h4.title #{book.title}
                        p.auther #{book.auther}
                      .book-btns
                        a.site-btn.light.r-15(href="book-details.html") تفاصيل الكتاب
                        a.site-btn.r-15(href="") إحجز الكتاب
          .tab-pane.fade#most
            .row
              each book in books
                .col-lg-3.col-md-6
                  .book-box
                    .book-img
                      img(src="img/"+ book.image, alt="book name")
                    .book-content
                      .book-headTitle
                        h4.title #{book.title}
                        p.auther #{book.auther}
                      .book-btns
                        a.site-btn.light.r-15(href="") تفاصيل الكتاب
                        a.site-btn.r-15(href="") إحجز الكتاب

      a.site-btn.light.r-15.more(href="" class="wow fadeInUp") تصفح المزيد
// End Books Show