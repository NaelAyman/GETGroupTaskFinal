extends index
block main-content
  .login-page
    .container
      form.form.sign-level(action="sign-up2.html")
        h2(class="wow fadeInDown") تسجيل جديد
        h4(class="wow fadeInUp") بيانات شخصية
        .form-group(class="wow fadeInUp" data-wow-delay="0.2s")
          input.form-control(type="text" id="firstName")
          label(for="firstName") الاسم الأول
        .form-group(class="wow fadeInUp" data-wow-delay="0.4s")
          input.form-control(type="text" id="lastNameName")
          label(for="lastName") الاسم الأخير
        .form-group(class="wow fadeInUp" data-wow-delay="0.6s")
          input.form-control(type="date" id="dateOfBirth")
          label(for="dateOfBirth") تاريخ الميلاد
        .form-group(class="wow fadeInUp" data-wow-delay="0.8s")
          input.form-control(type="email" id="email")
          label(for="email") البريد الإلكتروني
        .form-group(class="wow fadeInUp" data-wow-delay="1s")
          input.form-control(type="text" id="address")
          label(for="address") العنوان
        .form-group(class="wow fadeInUp" data-wow-delay="1.2s")
          input.form-control(type="tel" id="phone")
          label(for="phone") رقم الهاتف
        .flex-btn(class="wow fadeInUp" data-wow-delay="1.4s")
          button.site-btn.more التالي
            i.fas.fa-chevron-left